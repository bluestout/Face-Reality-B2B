<div class="case-studies">

  <div class="studies-banner">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 col-sm-11">
          {% include 'breadcrumbs' %}
          <h1 class="studies-banner__title">{{ page_title }}</h1>
          <h2 class="studies-banner__subtitle">{{ page.content | strip | strip_html | truncatewords: 30 }}</h2>
        </div>
      </div>
    </div>
  </div>

  <div class="studies-articles">
    <div class="studies-articles__items">
      {% assign first = true %}
      {% for link in linklists['case-studies'].links %}
        {% assign modulo = forloop.index | modulo: 3 %}
        {% if modulo == 1 %}
          <div class="row" data-case-studies-row={{ first }}>
          {% assign first = false %}
        {% endif %}
          <div class="col-lg-4 col-12 flex">
            {% include 'case-study-item' with link %}
          </div>
        {% if modulo == 0 or forloop.last %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <div class="studies-articles__more-wrap d-md-none ">
      <button type="button" class="studies-articles__more-button" data-case-studies-load-more>Show more</button>
    </div>
  </div>

  {% section 'info-cta' %}

</div>