<div class="full-w-rows">
  <div class="row no-gutters">
    <div class="col-lg-1"></div>
    <div class="col-lg-4 flex-col-wrap justify-content-center">
      <h3 class="full-w-rows__section-title">{{ section.settings.title_top }}</h3>
      <p class="full-w-rows__section-content">{{ section.settings.description_top }}</p>
    </div>
    <div class="col-lg-1"></div>
    <div class="col-lg-6 flex-col-wrap justify-content-center">
      {% include 'responsive-image' with
        image: section.settings.image_top,
        max_width: 1600,
        max_height: 1600,
        wrapper_class: 'full-w-rows__image-wrap',
        img_class: 'full-w-rows__image'
      %}
    </div>
  </div>
  <div class="row no-gutters">
    <div class="col-lg-6 flex-col-wrap justify-content-center">
      {% include 'responsive-image' with
        image: section.settings.image_bottom,
        max_width: 1600,
        max_height: 1600,
        wrapper_class: 'full-w-rows__image-wrap',
        img_class: 'full-w-rows__image'
      %}
    </div>
    <div class="col-lg-1"></div>
    <div class="col-lg-4 flex-col-wrap justify-content-center">
      <h3 class="full-w-rows__section-title">{{ section.settings.title_bottom }}</h3>
      <p class="full-w-rows__section-content">{{ section.settings.description_bottom }}</p>
    </div>
    <div class="col-lg-1"></div>
  </div>
</div>

{% schema %}
  {
    "name": "Content",
    "settings": [
      {
        "type": "text",
        "id": "title_top",
        "label": "Top title"
      },
      {
        "type": "richtext",
        "id": "description_top",
        "label": "Top description"
      },
      {
        "type": "image_picker",
        "id": "image_top",
        "label": "Top image"
      },
      {
        "type": "text",
        "id": "title_bottom",
        "label": "Bottom title"
      },
      {
        "type": "richtext",
        "id": "description_bottom",
        "label": "Bottom description"
      },
      {
        "type": "image_picker",
        "id": "image_bottom",
        "label": "Bottom image"
      }
    ]
  }
{% endschema %}
