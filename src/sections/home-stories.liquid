<section class="blog-stories max-wrap" data-blog-posts>
  <h2 class="blog-stories__title">{{ section.settings.title }}</h2>
  <div class="row no-gutters">
    <div class="col-lg-6 flex" data-blog-story="1"></div>
    <div class="col-lg-6 d-none d-md-block">
      <div class="row no-gutters blog-stories__half-h-row">
        <div class="col-sm-6" data-blog-story="2"></div>
        <div class="col-sm-6" data-blog-story="3"></div>
      </div>
      <div class="row no-gutters blog-stories__half-h-row">
        <div class="col-sm-6" data-blog-story="4"></div>
        <div class="col-sm-6" data-blog-story="5"></div>
      </div>
    </div>
  </div>
  {% if section.settings.link_text %}
    <div class="blog-stories__inline-link-wrap">
      <a href="{{ section.settings.link_url }}" class="blog-stories__inline-link">{{ section.settings.link_text }}</a>
    </div>
  {% endif %}
</section>

{% schema %}
  {
    "name": "Stories",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link Text"
      },
      {
        "type": "url",
        "id": "link_url",
        "label": "Link URL"
      }
    ],
    "presets": [{
        "name": "Stories",
        "category": "Front Page"
    }]
  }
{% endschema %}
