<div class="quiz-landing__instructions">
  <div class="row">
    <div class="col-md-6 col-first-col">
      <ul class="quiz-landing__list">
        {% for block in section.blocks %}
          {% if block.type == "list_left" %}
            <li class="quiz-landing__item">
              {{ block.settings.title }}
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
    <div class="col-md-6">
      <ul class="quiz-landing__list">
        {% for block in section.blocks %}
          {% if block.type == "list_right" %}
            <li class="quiz-landing__item">
              {{ block.settings.title }}
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
{% if section.settings.link and section.settings.link_text %}
  <div class="quiz-landing__links">
    <a href="{{ section.settings.link }}" class="quiz-landing__link">{{ section.settings.link_text }}</a>
  </div>
{% endif %}

{% schema %}
  {
    "name": "Certification",
    "settings": [
      {
        "type": "url",
        "id": "link",
        "label": "Link URL"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link text"
      }
    ],
    "blocks": [
      {
        "type": "list_left",
        "name": "Left list",
        "settings": [
          {
            "type": "textarea",
            "id": "title",
            "label": "List item"
          }
        ]
      },
      {
        "type": "list_right",
        "name": "Right list",
        "settings": [
          {
            "type": "textarea",
            "id": "title",
            "label": "List item"
          }
        ]
      }
    ]
  }
{% endschema %}
