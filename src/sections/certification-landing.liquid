<div class="quiz-landing__instructions">
  <div class="row">
    <div class="col-md-6 col-first-col">
      <div class="quiz-landing__content-block">
        {{ section.settings.left_content }}
      </div>
    </div>
    <div class="col-md-6">
      <div class="quiz-landing__content-block">
        {{ section.settings.right_content }}
      </div>
    </div>
  </div>
</div>
{% if section.settings.link and section.settings.link_text %}
  {% if customer %}
    {% if customer.tags contains "training_purchased" %}
      <div class="quiz-landing__links">
        <a data-quiz-redirect data-customer-email="{{ customer.email }}" data-customer-id="{{ customer.id }}" href="{{ section.settings.link }}" class="quiz-landing__link">{{ section.settings.link_text }}</a>
      </div>
    {% else %}
      <div class="quiz-landing__links">
        <a data-quiz-purchase href="/products/training-course" class="quiz-landing__link">Purchase test</a>
        <a data-quiz-redirect data-customer-email="{{ customer.email }}" data-customer-id="{{ customer.id }}" href="{{ section.settings.link }}" class="quiz-landing__link d-none">{{ section.settings.link_text }}</a>
      </div>
    {% endif %}
  {% else %}
    <p>You must be logged in to access the quiz</p>
    <div class="quiz-landing__links">
      <a href="/account/login" class="quiz-landing__link">Log in</a>
      <a href="/account/register" class="quiz-landing__link">Sign up</a>
    </div>
  {% endif %}
{% endif %}

{% schema %}
  {
    "name": "Certification",
    "settings": [
      {
        "type": "url",
        "id": "link",
        "label": "Link URL"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link text"
      },
      {
        "type": "textarea",
        "id": "left_content",
        "label": "Left Content Block"
      },
      {
        "type": "textarea",
        "id": "right_content",
        "label": "Right Content Block"
      }
    ]
  }
{% endschema %}
