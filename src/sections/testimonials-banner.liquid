{% assign light_font = false %}
{% if section.settings.color == "white" %}
  {% assign light_font = true %}
{% endif %}

{% assign b_title = page.content | strip | strip_html %}
{% include 'page-banner' with
  background: section.settings.bg,
  background_mobile: section.settings.bg_mobile,
  banner_suptitle: page.title,
  banner_title: b_title
  light_font: light_font
  height: "small"
  margin: "small",
  limit_width: "small"
%}

{% schema %}
  {
    "name": "Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "bg",
        "label": "Background"
      },
      {
        "type": "image_picker",
        "id": "bg_mobile",
        "label": "Mobile Background"
      },
      {
        "type": "radio",
        "id": "color",
        "label": "Font Color",
        "options": [
          { "value": "black", "label": "Black" },
          { "value": "white", "label": "White" }
        ]
      }
    ]
  }
{% endschema %}
