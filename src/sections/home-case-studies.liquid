<section class="case-studies-section">
  <div class="container">
    <h3 class="case-studies-section__suptitle">{{ section.settings.suptitle }}</h3>
    <h2 class="case-studies-section__title">{{ section.settings.title }}</h2>
    <div class="case-studies-section__studies js-case-studies-slider">
      {% for block in section.blocks %}
        <div class="case-studies-section__study">
          <div class="row">
            <div class="col-md-5 flex-col-wrap justify-content-center">
              <div class="case-studies-section__study-content">
                <h2 class="case-studies-section__study-title">{{ block.settings.title }}</h2>
                <div class="case-studies-section__study-text">{{ block.settings.description }}</div>
              </div>
            </div>
            <div class="col-md-7 flex-col-wrap justify-content-center">
            {% if block.settings.image_before and block.settings.image_after %}
              {% assign img_before = block.settings.image_before | img_url: 'medium' %}
              {% assign img_after = block.settings.image_after | img_url: 'medium' %}
              {%- include 'image-compare'
                with before: img_before,
                after: img_after,
                initial: 50,
                indicators: true
              -%}
            </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Case Studies",
    "settings": [
      {
        "type": "text",
        "id": "suptitle",
        "label": "Suptitle"
      },
      {
        "type": "textarea",
        "id": "title",
        "label": "Title"
      }
    ],
    "blocks": [
      {
        "type": "study",
        "name": "Case Study",
        "settings": [
          {
            "type": "textarea",
            "id": "title",
            "label": "Study title"
          },
          {
            "type": "textarea",
            "id": "description",
            "label": "Study description"
          },
          {
            "type": "image_picker",
            "id": "image_before",
            "label": "Before image"
          },
          {
            "type": "image_picker",
            "id": "image_after",
            "label": "After image"
          }
        ]
      }
    ],
    "presets": [{
        "name": "Case Studies",
        "category": "Front Page"
    }]
  }
{% endschema %}
