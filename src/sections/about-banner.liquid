{% include 'page-banner' with
  background: section.settings.bg,
  banner_suptitle: section.settings.suptitle,
  banner_title: section.settings.title
  height: "large"
  margin: "large"
%}

{% schema %}
  {
    "name": "banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "bg",
        "label": "Banner background"
      },
      {
        "type": "text",
        "id": "suptitle",
        "label": "Banner suptitle"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Banner title"
      }
    ]
  }
{% endschema %}
