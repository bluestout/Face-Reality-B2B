{% if section.settings.bg %}
  <div class="treatment-banner lazyload" data-bgset="{% include 'responsive-bg-image', image: section.settings.bg %}">
{% else %}
  <div class="treatment-banner lazyload" style="background-image: url('http://via.placeholder.com/1920x500')">
{% endif %}
  <div class="treatment-banner__content max-wrap">
    <h1 class="treatment-banner__suptitle">{{ page.title }}</h1>
    <h2 class="treatment-banner__title shopify-rte">{{ page.content }}</h2>
    {% if section.settings.image %}
      {% include 'responsive-image' with
        image: section.settings.image,
        wrapper_class: 'treatment-banner__badge-wrap',
        image_class: 'treatment-banner__badge',
        alt: page.title
        max_width: 180,
        max_height: 180
      %}
    {% else %}
      <div class="treatment-banner__badge-wrap">
        <img src="http://via.placeholder.com/180x180" alt="{{ page.title }}" class="treatment-banner__badge"/>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Treatment Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "bg",
        "label": "Background"
      },
      {
        "type": "image_picker",
        "id": "badge",
        "label": "Badge"
      }
    ]
  }
{% endschema %}
