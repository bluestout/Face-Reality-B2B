{% if section.settings.bg %}
  <div class="about-products-banner" data-bgset="{% include 'responsive-bg-image', image: section.settings.bg %}">
{% else %}
  <div class="about-products-banner">
{% endif %}
  <h1 class="about-products-banner__suptitle">{{ page.title }}</h1>
  <h2 class="about-products-banner__title">{{ page.content | strip | strip_html }}</h2>
</div>

{% schema %}
  {
    "name": "Header Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "bg",
        "label": "Background"
      }
    ]
  }
{% endschema %}
