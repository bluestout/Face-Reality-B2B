    "name": "Program",
    "settings": [
      {
        "type": "text",
        "id": "suptitle",
        "label": "Suptitle"
      },
      {
        "type": "textarea",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "textarea",
        "id": "introduction",
        "label": "Introduction text"
      },
      {
        "type": "textarea",
        "id": "bottom_text",
        "label": "Bottom text"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Bottom link URL"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Bottom link text"
      },
      {
        "type": "header",
        "content": "Left block"
      },
      {
        "type": "image_picker",
        "id": "image_l",
        "label": "Image"
      },
      {
        "type": "textarea",
        "id": "title_l",
        "label": "Title"
      },
      {
        "type": "textarea",
        "id": "content_l",
        "label": "Content"
      },
      {
        "type": "header",
        "content": "Right block"
      },
      {
        "type": "image_picker",
        "id": "image_r",
        "label": "Image"
      },
      {
        "type": "textarea",
        "id": "title_r",
        "label": "Title"
      },
      {
        "type": "textarea",
        "id": "content_r",
        "label": "Content"
      },
      {
        "type": "header",
        "content": "Bottom block"
      },
      {
        "type": "textarea",
        "id": "title_b",
        "label": "Title"
      },
      {
        "type": "textarea",
        "id": "content_b_l",
        "label": "Content left"
      },
      {
        "type": "textarea",
        "id": "content_b_r",
        "label": "Content right"
      },
      {
        "type": "textarea",
        "id": "note_b",
        "label": "Disclaimer"
      }
    ]
  }
{% endschema %}
