<section class="training-program" id="training-program-content">
  <div class="container">
    <h3 class="training-program__suptitle">{{ section.settings.suptitle }}</h3>
    <h2 class="training-program__title">{{ section.settings.title }}</h2>
    <div class="training-program__introduction">{{ section.settings.introduction }}</div>

    <div class="row no-gutters">
      <div class="col-md-6">
        <div class="training-program__block training-program__block--left">
          {% if section.settings.image_l %}
            {% include 'responsive-image' with
              image: section.settings.image_l,
              max_width: 100,
              max_height: 100,
              wrapper_class: 'training-program__block-image-wrap',
              img_class: 'training-program__block-image'
            %}
          {% endif %}
          <h3 class="training-program__block-title">{{ section.settings.title_l }}</h3>
          <div class="training-program__block-content">{{ section.settings.content_l }}</div>

          <div class="training-program__block-separator">
            <span class="training-program__block-separator-dot"></span>
            <span class="training-program__block-separator-arrow icon-triangle"></span>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="training-program__block training-program__block--right">
          {% if section.settings.image_r %}
            {% include 'responsive-image' with
              image: section.settings.image_r,
              max_width: 100,
              max_height: 100,
              wrapper_class: 'training-program__block-image-wrap',
              img_class: 'training-program__block-image'
            %}
          {% endif %}
          <h3 class="training-program__block-title">{{ section.settings.title_r }}</h3>
          <div class="training-program__block-content">{{ section.settings.content_r }}</div>
        </div>
      </div>
      <div class="col-12">
        <div class="training-program__bottom">
          <h3 class="training-program__bottom-title">{{ section.settings.title_b }}</h3>
          <div class="row">
            <div class="col-md-6">
              <div class="training-program__bottom-content">{{ section.settings.content_b_l }}</div>
            </div>
            <div class="col-md-6">
              <div class="training-program__bottom-content">{{ section.settings.content_b_r }}</div>
            </div>
          </div>
          <div class="training-program__bottom-note">{{ section.settings.note_b }}</div>
        </div>
      </div>
    </div>

    <div class="training-program__bottom-text">{{ section.settings.bottom_text }}</div>
    {% if section.settings.link and section.settings.link_text %}
      <div class="training-program__link-wrap">
        <a href="{{ section.settings.link }}" class="training-program__link">{{ section.settings.link_text }}</a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
