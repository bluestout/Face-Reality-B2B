<div class="social-sharing" {% if attributes %}{{ attributes }}{% endif %}>
  {% if settings.share_facebook %}
    <a class="social-sharing__link" target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" title="{{ 'general.social.share_on_facebook' | t }}" rel="nofollow">
      <span class="social-sharing__icon icon-facebook"></span>
      <span class="hide" aria-hidden="true">{{ 'general.social.share_on_facebook' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_twitter %}
    <a class="social-sharing__link" target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" title="{{ 'general.social.share_on_twitter' | t }}" rel="nofollow">
      <span class="social-sharing__icon icon-twitter"></span>
      <span class="hide" aria-hidden="true">{{ 'general.social.share_on_twitter' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_pinterest %}
    <a class="social-sharing__link" target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" title="{{ 'general.social.share_on_pinterest' | t }}" rel="nofollow">
      <span class="social-sharing__icon icon-pinterest"></span>
      <span class="hide" aria-hidden="true">{{ 'general.social.share_on_pinterest' | t }}</span>
    </a>
  {% endif %}
</div>
