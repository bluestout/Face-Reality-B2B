<div class="site-header__utility-nav">
  <button type="button" class="site-header__utility-nav-icon-wrap">
    <span class="icon-search site-header__utility-nav-icon"></span>
  </button>

  <form action="/search" method="get" role="search" class="site-header__utility-nav-searchform hide">
    <label for="Search" class="label-hidden">
      {{ 'general.search.placeholder' | t }}
    </label>

    <input
      class="site-header__utility-nav-input"
      type="search"
      name="q"
      id="Search"
      value="{{ search.terms | escape }}"
      placeholder="{{ 'general.search.placeholder' | t }}"/>

    <button type="submit" class="site-header__utility-nav-icon">
      {% include 'icon-search' %}
      <span class="icon-fallback-text">{{ 'general.search.submit' | t }}</span>
    </button>
  </form>

  <a href="/cart" class="site-header__utility-nav-icon-wrap">
    <span class="icon-shopping-cart site-header__utility-nav-icon"></span>
  </a>

  <a href="#" class="site-header__utility-nav-button">Find a nearby clinic</a>
</div>