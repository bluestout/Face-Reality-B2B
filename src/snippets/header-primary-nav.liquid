<nav role="navigation" class="primary-nav">
  <ul class="primary-nav__list">
    {% for link in linklists[section.settings.menu].links %}
      {% if link.links != blank %}
        <li class="primary-nav__item">
          <a href="{{ link.url }}" class="primary-nav__link" data-primary-nav-link>
            {{ link.title }}
            <span class="icon-angle-down primary-nav__icon"></span>
          </a>
          <ul class="primary-nav__sub-list" data-primary-nav-sublist>
            {% for childlink in link.links %}
              <li class="primary-nav__sub-item">
                <a href="{{ childlink.url }}" class="primary-nav__sub-link">{{ childlink.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </li>
      {% else %}
        <li class="primary-nav__item">
          <a href="{{ link.url }}" class="primary-nav__link">{{ link.title }}</a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</nav>

<button type="button" class="primary-nav__menu-button" data-mobile-menu-toggle>
  <span class="primary-nav__menu-button-icon icon-menu"></span>
  <span class="primary-nav__menu-button-text">Menu</span>
</button>